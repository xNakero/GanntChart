<Window x:Class="GanntChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanntChart"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1650">
    <Grid Background="#FF1E2336">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="875*"/>
            <ColumnDefinition Width="748*"/>
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Column="1" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="1642" Grid.ColumnSpan="3" Background="#FF142D49">
            <Button Content="Edit" Foreground="#FF6BD6B5"/>
            <Button Content="Open" Foreground="#FF6BD6B5"/>
            <Button Content="Save" Foreground="#FF6BD6B5"/>
            <Button Content="Reset chart" Foreground="#FF6BD6B5"/>
            <Button Content="Extract as png" Foreground="#FF6BD6B5"/>
        </ToolBar>
        <Canvas Grid.Column="2" HorizontalAlignment="Left" Height="762" Margin="10,67,0,0" VerticalAlignment="Top" Width="1579" Grid.ColumnSpan="2" Background="White"/>

    </Grid>
</Window>
