<Window x:Class="GanntChart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GanntChart"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1650" WindowStyle="ThreeDBorderWindow">
    <Grid Background="#FF1E2336">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <ToolBar Grid.Column="1" HorizontalAlignment="Left" Height="36" VerticalAlignment="Top" Width="1642" Grid.ColumnSpan="4" Background="#FF142D49">
            <Button Content="Edit" Foreground="#FF6BD6B5"/>
            <Button Content="Open" Foreground="#FF6BD6B5"/>
            <Button Content="Save" Foreground="#FF6BD6B5"/>
            <Button Content="Reset chart" Foreground="#FF6BD6B5"/>
            <Button Content="Extract as png" Foreground="#FF6BD6B5"/>
        </ToolBar>
        <Canvas Grid.Column="2" HorizontalAlignment="Center" Height="800" Margin="25,50,25,10" VerticalAlignment="Center" Width="1600" Grid.ColumnSpan="3" Background="White"/>

    </Grid>
</Window>
